<div class="row">
  <div class="col-md-9">
    <h1>Categories <%= link_to 'Create new', new_category_path, class: 'btn btn-success' %></h1>
    <%= count_for @categories, 'Total:' %>
    <hr>

    <% unless flash[:notice].blank? %>
      <div class="alert alert-success">
        <p><%= flash[:notice] %></p>
      </div>
    <% end %>

    <h3>Category details</h3>

    <table class="table table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Total products:</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <%= render @categories %>
      </tbody>
    </table>
  </div>
</div>
